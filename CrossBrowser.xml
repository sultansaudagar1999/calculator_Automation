            <class name="testCases.TestAllUiComponentsClickable">
                <methods>
                    <include name="testAllComponentsClickable"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="FireFoxBrowserTest">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="testCases.TestAllUiComponentsClickable">
                <methods>
                    <include name="testAllComponentsClickable"/>
                </methods>
            </class>
        </classes>
    </test>

<suite name="CrossBrowser">

    <listeners>
        <listener class-name="utility.ExtentReportManager" />
    </listeners>

    <test name="ChromeBrowserTest">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="testCases.TestAllUiComponentsClickable">
                <methods>
                    <include name="testAllComponentsClickable"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="EdgeBrowserTest">
        <parameter name="browser" value="edge"/>
